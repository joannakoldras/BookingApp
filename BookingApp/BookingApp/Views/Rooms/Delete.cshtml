@model BookingApp.Models.Room

@{
    ViewData["Title"] = "Usuwanie pokoju";
}

<h1>Usuwanie pokoju</h1>

<h3>Czy chcesz usunąć pokój?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Piętro")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Floor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Numer pokoju")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Liczba łóżek dwuosobowych")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfDoubleBeds)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Liczba łóżek jednosobowych")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfSingleBeds)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Liczba osób")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumbefOfPeople)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Cena za osobę")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powróć listy pokojów </a>
    </form>
</div>
