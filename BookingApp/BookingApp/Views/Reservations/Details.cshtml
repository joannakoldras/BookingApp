@model BookingApp.Data.Reservation

@{
    ViewData["Title"] = "Szczegóły rezerwacji";
}

<h1>Szczegóły rezerwacji</h1>

<div>
 
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Klient")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Id):  @Html.DisplayFor(model => model.Client.FirstName)  @Html.DisplayFor(model => model.Client.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Numer pokoju")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Data początkowa")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateFrom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Data końcowa")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateTo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Data płatności")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatePayment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Cena całkowita")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice) zł.
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Liczba dni")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfDays)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Zapłacono")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsPaid)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a> |
    <a asp-action="Index">Powróć do listy rezerwacji</a>
</div>
