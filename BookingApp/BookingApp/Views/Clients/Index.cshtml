@model IEnumerable<BookingApp.Models.Client>

@{
    ViewData["Title"] = "Lista Klientów";
}

<h1>Lista Klientów</h1>

<p>
    <a asp-action="Create">Zarejestruj Klienta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Imię")
            </th>
            <th>
                @Html.DisplayName("Nazwisko")
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Aktualizuj dane</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
